%dl.dl-horizontal
  %dt User:
  %dd= @quiz.user.email
  %dt Subject:
  %dd= @quiz.subject.name
  %ol
  - @quiz.quiz_answers.each do |quiz_answer|
    %b
      = quiz_answer.question.title
    %ul
      - quiz_answer.question.answers.each do |answer|
        %li  
          = answer.title
          - if answer.correct?
            = fa_icon 'check',{style: "color: #83b541;"}
            %span{style: "color: #83b541;"} correct
          - elsif !answer.correct? && quiz_answer.answer == answer 
            = fa_icon 'times',{style: "color: #ff657a;"}
            